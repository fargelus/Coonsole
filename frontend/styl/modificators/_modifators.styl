@require '../_variables'
@require '../modificators/_mixes.styl'

.button-theme
    &--snow, &--orange, &--masala
        &:hover
            opacity: .8

    &--light-orange
        &:hover
            opacity: .95

    &--snow
        border: 1px solid black
        background-color: $snow

    &--orange
        background-color: $blaze-orange

    &--light-orange
        background-color: $light-orange

    &--sky
        background-color: $sky

        &:hover
            background-color: darken($sky, 10)

    &--masala
        background-color: $masala

.button--disabled
  opacity: .5
  &:hover
    opacity: .5


.bg-theme
    &--white-orange
        background-color: $snow
        color: $flamingo
        opacity: 1

    &--black-n-white
        background-color: black
        color: $snow

    &--gallery
        background-color: $gallery

    &--snow
        background-color: $snow


.border-theme--gallery
    border: 1px solid $gallery


.text-color
    &--gray
        color: $gray

    &--blaze-orange
        color: $blaze-orange


.text-size
    &--upper-medium
        font-size: 18px
        line-height: 1.16


.overlay--visible
    height: 100vh
    width: 100vw


.modal-mode__title--option
    font-size: 17px
    @extend $like-link-tmpl

.form-input--forgot-pwd
    position: relative

    .forgot-link
        position: absolute
        right: 5px
        top: -20px
