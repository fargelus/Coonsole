@require '../_variables'

.button-theme
    &--snow
        border: 1px solid black
        background-color: $snow

        &:hover
            opacity: .8

    &--orange
        border: 0
        color: $snow
        background-color: $blaze-orange

        &:hover
            opacity: .8


.button--disabled
  opacity: .5
  &:hover
    opacity: .5


.bg-theme
    &--white-orange
        background-color: $snow
        color: $flamingo
        opacity: 1

    &--black-n-white
        background-color: black
        color: $snow

    &--gallery
        background-color: $gallery

    &--snow
        background-color: $snow


.box-shadow--gallery
    box-shadow: 0 0 10px 100px $gallery inset


.border-theme--gallery
    border: 1px solid $gallery


.text-color
    &--gray
        color: $gray

    &--blaze-orange
        color: $blaze-orange


.text-size
    &--upper-medium
        font-size: 18px
        line-height: 1.16
